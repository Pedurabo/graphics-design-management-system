{
  "name": "graphics-app-backend",
  "version": "1.0.0",
  "description": "Backend Team - Enhanced Graphics Application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "lint": "eslint src --ext .ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,json,md}",
    "type-check": "tsc --noEmit",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "performance": "artillery run tests/performance/load-test.yml",
    "team:standup": "echo 'Backend Team Standup - 9:15 AM'",
    "team:sync": "echo 'Backend Team Sync - 5:00 PM'",
    "team:retro": "echo 'Backend Team Retrospective'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.14.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.31.3",
    "socket.io": "^4.6.1",
    "redis": "^4.6.6",
    "pg": "^8.9.0",
    "prisma": "^4.9.0",
    "@prisma/client": "^4.9.0",
    "zod": "^3.20.6",
    "joi": "^17.9.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.1",
    "aws-sdk": "^2.1348.0",
    "google-cloud-storage": "^6.8.0",
    "stripe": "^11.12.0",
    "twilio": "^4.8.0",
    "bull": "^4.10.4",
    "ioredis": "^5.3.2",
    "elasticsearch": "^16.7.3",
    "mongoose": "^7.0.3",
    "typeorm": "^0.3.15",
    "sequelize": "^6.30.0",
    "knex": "^2.4.2",
    "objection": "^3.0.1",
    "graphql": "^16.6.0",
    "apollo-server-express": "^3.11.1",
    "type-graphql": "^2.0.0-beta.3",
    "grpc": "^1.24.11",
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "openapi3-ts": "^2.0.2",
    "jest": "^29.4.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "@types/jest": "^29.4.0",
    "@types/supertest": "^2.0.12"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.6.6",
    "@types/nodemailer": "^6.4.8",
    "@types/redis": "^4.0.11",
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.20",
    "eslint": "^8.35.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "prettier": "^2.8.4",
    "artillery": "^2.0.0-27",
    "faker": "^6.6.6",
    "@types/faker": "^6.6.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitizen"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "team": {
    "name": "Backend Team",
    "lead": "Backend Architect",
    "standup": "9:15 AM",
    "sync": "5:00 PM",
    "sprint": "2 weeks",
    "focus": "Node.js, Express, Database, Authentication"
  }
} 